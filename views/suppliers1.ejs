  z-index: 1;
  border-style: solid;
  border-color:black;
  border-width: 1px;
  border-radius: 12px;
  background-color: none;
  padding: 1px 5px;
  text-align: left;
  box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);
}


.gray {
  background:none;
  grid-column: auto; 
  grid-row: auto;
  font-family: Verdana, Geneva, Tahoma, sans-serif;
}


.gray-form { 
  grid-column: auto; 
  grid-row: auto;
  margin: 0px 40px;
  position: relative;
  z-index: 1;
  border-style: solid;
  border-color:black;
  border-width: 1px;
  border-radius: 12px;
  background-color: none;
  padding: 1px 5px;
  text-align: left;
  box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);
}
h3 {
    text-decoration: underline;
}
</style>

