<style>

#grid {
  display: grid;
  position: relative;
  grid-template-columns: 350fr 350fr;;
  grid-template-rows: 350fr 350fr;;
  grid-gap: 10px;
  width: 250;
  height: 100vh;
  margin: 0 50px;
  background-color:white;
  font-family: Verdana, Geneva, Tahoma, sans-serif;
}

#grid > div {
  padding: 20px 80px;
  font-size: 18px;
  color:black;
  text-align: left;
}


.supplier {
  background:none;
  opacity: 0.8;
  grid-column: auto; 
  grid-row: auto;
  font-family: Verdana, Geneva, Tahoma, sans-serif;
}


.supplier-form {
 
  grid-column: auto; 
  grid-row: auto;
  margin: 0px 20px;
  position: relative;
  z-index: 1;
  border-style: solid;
  border-color:black;
  border-width: 1px;
  border-radius: 12px;
  background-color: none;
  padding: 1px 5px;
  text-align: left;
  box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);
}

.logs {
  background:none;
  grid-column: auto; 
  grid-row: auto;
  font-family: Verdana, Geneva, Tahoma, sans-serif;

}
.logs-form{ 
  grid-column: auto; 
  grid-row: auto;
  margin: 0px 20px;
  position: relative;
  z-index: 1;
  border-style: solid;
  border-color:black;
  border-width: 1px;
  border-radius: 12px;
  background-color: none;
  padding: 1px 5px;
  text-align: left;
  box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);
}
.form button {
  font-family: Verdana, Geneva, Tahoma, sans-serif;
  text-transform: uppercase;
  margin: 0px 0px;
  outline: 0;
  background: rgba(128, 128, 128, 0.842);
  width: 35%;
  border-style: solid;
  border-bottom: 12px;
  padding: 8px;
  color: #FFFFFF;
  font-size: 14px;
  -webkit-transition: all 0.3 ease;
  transition: all 0.3 ease;
  cursor: pointer;
}
.form button:hover,.form button:active,.form button:focus {
  background:  rgba(128, 128, 128, 0.842);
}

.blue {
  background:none;
  grid-column: auto; 
  grid-row: auto;
  font-family: Verdana, Geneva, Tahoma, sans-serif;
}
.blue-form {
  grid-column: auto; 
  grid-row: auto;
  margin: 0px 20px;
